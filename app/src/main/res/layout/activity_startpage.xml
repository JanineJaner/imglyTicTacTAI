<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="15dp"
                android:textSize="16sp"
                android:gravity="center_vertical"
                android:background="?attr/backgroundColor">
    <TextView
            android:id="@+id/textview_greetings"
            android:text="TEST MAJDJAKDIJSI"
            android:textSize="12sp"
            android:textColor="?attr/greetingTextColor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="120dp"
            android:layout_centerHorizontal="true"/>

    <Button
            android:id="@+id/button_startGame"
            android:text="Start Game"
            android:textColor="?attr/textColor"
            android:backgroundTint="?attr/buttonColor"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="80dp"
            android:layout_below="@id/textview_greetings"
            android:layout_centerHorizontal="true"/>

    <Button
            android:id="@+id/button_changeName"
            android:text="Change Name"
            android:textColor="?attr/textColor"
            android:backgroundTint="?attr/buttonColor"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/button_startGame"
            android:layout_centerHorizontal="true"/>

    <CheckBox
            android:id="@+id/checkbox_darkModeEnabled"
            android:text="Dark Mode"
            android:textColor="?attr/textColor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_below="@id/button_changeName"
            android:layout_centerHorizontal="true"/>

</RelativeLayout>